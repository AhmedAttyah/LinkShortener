<!DOCTYPE html>
<html>
<head>
  <title>Linkshortner</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
	 
	      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="/">Link Shortener</a>
	      <div class="nav-collapse collapse">
	        <ul class="nav">
	        	<% if user_signed_in? %>
	        		<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
		        	
		        <% else %>
		        	<li><%= link_to "Sign in", new_user_session_path %></li>
		        	<li><%= link_to "Register", new_user_registration_path %></li>
		        <% end %>
	        </ul>
	      </div> 
	    </div>
	  </div>
	</div>
	<div class="container">
		<div class="row">
			<% flash.each do |key, value| %>
				<div class= "alert" 
					<%= if key == "notice"
							"alert-success" 
						else
							"alert-error"
						end %>>
					<%= value %>
				</div>
			<% end %>
			<div class="span9"><%= yield %></div>
			<div class="span3">
				<% if (user_signed_in?) %>
					<div class="alert alert-success">You are signed in as <%= current_user.email %> </div>
					<%else%>
					<div class="alert alert-error">Hello Guest!, if you are a member then you are not signed </div>
				<%end %>

				<br>
				<p class="text-info">
					LinkShortener is opensource project developed by AhmedAttyah
					<%= link_to "Project on Github", "https://github.com/AhmedAttyah/LinkShortener" %>
				</p>
			</div>
		</div>
	</div>
</body>
</html>
